{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "single_file_console_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "single_file_graphic_build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_console_build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { g++ -g $(Get-ChildItem -Recurse -Filter *.cpp -Path src | ForEach-Object { $_.FullName }) -o ${workspaceFolderBasename}}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "multi_file_graphic_build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "& { g++ -g $(Get-ChildItem -Recurse -Filter *.cpp -Path src | ForEach-Object { $_.FullName }) -o ${workspaceFolderBasename}  -lbgi -lgdi32 -lcomdlg32 -luuid -loleaut32  -lole32 }"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}